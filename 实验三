void main()
{
char string[20];
     int hw;
 printf("input a string:");
     scanf("%s",sting);
     hw=huiwen(string);        //调用 huiwei完成判断
 if(hw) printf("The string is HUIWEN.");  //输出判断结果
     else  printf("The string is not HUIWEN.");
}
