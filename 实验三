InitStack()
while(str[i]!='\0')
        i++;
i=i/2;
for(int j=0;j<i;j++)
{
        Push(s,str[j]);
}
while(i>0)
{
       Pop(s,e);
	if(e!=str[i]) return 0;break;
	else i--;
}
